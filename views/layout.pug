doctype
html
  head
    meta(charset='UTF-8')
    title= title
    meta(name='viewport' content='width=device-width, user-scalable=no')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    link(rel='stylesheet' href='/main.css')
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    script(src='https://code.jquery.com/jquery-3.6.0.min.js' integrity='sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=' crossorigin='anonymous')
  body
    .container
      .profile-wrap
        .profile
          if user && user.id
            .user-name= '안녕하세요! ' + user.nick + '님'
            input#my-id(type='hidden' value=user.id)
            a#my-profile.btn(href='/profile') 임시
            a#logout.btn(href='/auth/logout') 로그아웃
          else
            form#login-form(action='/auth/login' method='post')
              .input-group
                label(for='id') 학생번호
                input#email(type='text' name='id' placeholder='학생번호' required autofocus)
              .input-group
                label(for='password') 비밀번호
                input#password(type='password' name='password' placeholder='생년월일 6자리' required)
              if loginError
                .error-message= loginError
              a#join.btn(href='/join') 데이터넣기
              button#login.btn(type='submit') 로그인
        footer
      block content
